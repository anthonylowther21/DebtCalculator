<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="DebtCalculator.App" 
       xmlns:converters="clr-namespace:DebtCalculator.Shared">
       <Application.Resources>
         <ResourceDictionary>
           <converters:DoubleToCurrencyConverter x:Key="DoubleToCurrencyConverter"/>
           <converters:DoubleToPercentConverter x:Key="DoubleToPercentConverter"/>
           <converters:DebtTypeToIconConverter x:Key="DebtTypeToIconConverter"/>
			     <converters:ListPaddingConverter x:Key="ListPaddingConverter"/>
			     <converters:AmortizationGroupSumConverter x:Key="AmortizationGroupSumConverter"/>
          <Color x:Key="grayPrimary">#ADB7BE</Color>
          <Color x:Key="grayLight">#ECF0F1</Color>
          <Color x:Key="grayDark">#76828A</Color>
          <Color x:Key="grayMedium">#9AA4AB</Color>
          <Color x:Key="LydiaGray">#727272</Color>
         </ResourceDictionary>
       </Application.Resources>
</Application>