<?xml version="1.0" encoding="UTF-8"?>
<local:SalaryPageXaml xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DebtCalculator.Shared.SalaryPage"
xmlns:local="clr-namespace:DebtCalculator.Shared"
xmlns:controls="clr-namespace:DebtCalculator.Controls"
xmlns:converters="clr-namespace:DebtCalculator.Shared">
  <local:SalaryPage.Content>
    <StackLayout>
      <TableView Intent="Settings">
        <TableRoot>
            <TableSection Title="">
                <EntryCell Label="Starting Salary" Text="{Binding StartingSalary}" Keyboard="Numeric" HorizontalTextAlignment="End"/>
                <EntryCell Label="Yearly Increase (%)" Text="{Binding YearlySnowballIncreasePercent, Mode=TwoWay, Converter={StaticResource DoubleToPercentConverter}}" Keyboard="Numeric" HorizontalTextAlignment="End"/>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="15, 0, 15, 0">
                        <Label Text="Yearly Applied Date" VerticalTextAlignment="Center" />
                        <DatePicker Date="{Binding YearlyIncreaseAppliedDate}, Mode=TwoWay}" 
                                    HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                            <DatePicker.Format>MMMM yyyy</DatePicker.Format>-->
                        </DatePicker>
                    </StackLayout>
                </ViewCell>
             </TableSection>
        </TableRoot>
      </TableView>
      <Button BackgroundColor="Blue" TextColor="White" BorderWidth="1" Text="Save" Clicked="Save_Button_Clicked"></Button>
      <Button BackgroundColor="Red" TextColor="Black" BorderWidth="1" Text="Delete" Clicked="Delete_Button_Clicked"></Button>
    </StackLayout>
  </local:SalaryPage.Content>
</local:SalaryPageXaml> 
