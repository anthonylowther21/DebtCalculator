<?xml version="1.0" encoding="UTF-8"?>
<local:SnowballPageXaml xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="DebtCalculator.Shared.SnowballPage"
xmlns:local="clr-namespace:DebtCalculator.Shared">
  <local:SnowballPage.Content>
    <StackLayout Orientation="Vertical" Padding="15">
      <Label Text="Snowball Amount" ></Label>
      <Entry Text="{Binding Snowball}"> </Entry>
      <Button BackgroundColor="Blue" 
        TextColor="White" BorderWidth="1" 
        Text="Save" 
        Clicked="Save_Button_Clicked"></Button>
    </StackLayout>
  </local:SnowballPage.Content>
</local:SnowballPageXaml> 
