<?xml version="1.0" encoding="UTF-8"?>
<local:WindfallPageXaml xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="DebtCalculator.Shared.WindfallPage"
xmlns:local="clr-namespace:DebtCalculator.Shared">
  <local:WindfallPage.Content>
    <StackLayout Orientation="Vertical" Padding="15">
      <Label Text="Amount"></Label>
      <Entry Text="{Binding Amount}"> </Entry>
      <Label Text="Applied Date" ></Label>
      <DatePicker Date="{Binding WindfallDate}">
        <DatePicker.Format>MMMM yyyy</DatePicker.Format> </DatePicker>
      <Label Text="Recurring?" ></Label>
      <Switch IsToggled="{Binding IsRecurring}"></Switch>
      <Label Text="Recurring Frequency" IsVisible="{Binding IsRecurring}"></Label>
      <Entry Text="{Binding RecurringFrequency}" IsVisible="{Binding IsRecurring}"> </Entry>
      <Button BackgroundColor="Blue" TextColor="White" BorderWidth="1" Text="Save" Clicked="Save_Button_Clicked"></Button>
      <Button BackgroundColor="Red" TextColor="Black" BorderWidth="1" Text="Delete" Clicked="Delete_Button_Clicked"></Button>
    </StackLayout>
  </local:WindfallPage.Content>
</local:WindfallPageXaml> 
