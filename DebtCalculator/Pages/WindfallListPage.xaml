<?xml version="1.0" encoding="UTF-8"?>
<d:MyBasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DebtCalculator.Pages.WindfallListPage"
xmlns:d="clr-namespace:DebtCalculator.Pages">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add" Command="{Binding AddWindfall}" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
	<d:MyBasePage.Content>
		<ListView ItemsSource="{Binding Windfalls}" SelectedItem="{Binding SelectedWindfall, Mode=TwoWay}" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Amount, Mode=OneWay, StringFormat='{0:C}'}" 
                    Detail="{Binding WindfallDate, Mode=OneWay, StringFormat='{0:MMMM yyyy}'}"></TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</d:MyBasePage.Content>
</d:MyBasePage>
