<?xml version="1.0" encoding="UTF-8"?>
<local:AmortizationPageXaml xmlns="http://xamarin.com/schemas/2014/forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
  x:Class="DebtCalculator.Shared.AmortizationPage"
  xmlns:local="clr-namespace:DebtCalculator.Shared" BackgroundColor="{Static local:Colors.PageBackground}">
  <local:AmortizationPage.Content>
    <StackLayout Orientation="Vertical" Padding="15">
      <Label Text="Debt Name"></Label>
      <Label Text="{Binding DebtName}"> </Label>
      <Label Text="Date" ></Label>
      <Label Text="{Binding Date, StringFormat='{0:MMMM yyyy}'}"> </Label>
      <Label Text="Start Balance" ></Label>
      <Label Text="{Binding StartBalance, StringFormat='{0:C}'}"> </Label>
      <Label Text="Minimum Interest" ></Label>
      <Label Text="{Binding MinimumInterest, StringFormat='{0:C}'}"> </Label>   
      <Label Text="Minimum Principal" ></Label>
      <Label Text="{Binding MinimumPrincipal, StringFormat='{0:C}'}"> </Label>
      <Label Text="Additional Principal" ></Label>
      <Label Text="{Binding AdditionalPrincipal, StringFormat='{0:C}'}"> </Label>
      <Label Text="Total Payment" ></Label>
      <Label Text="{Binding TotalPayment, StringFormat='{0:C}'}"> </Label>
      <Label Text="End Balance" ></Label>
      <Label Text="{Binding EndBalance, StringFormat='{0:C}'}"> </Label>                          
    </StackLayout>
  </local:AmortizationPage.Content>
</local:AmortizationPageXaml> 
