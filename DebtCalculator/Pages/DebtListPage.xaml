<?xml version="1.0" encoding="UTF-8"?>
<BasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DebtCalculator.Pages.DebtListPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add" Command="{Binding AddDebt}" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
	<BasePage.Content>
		<ListView ItemsSource="{Binding Debts}" SelectedItem="{Binding SelectedDebt}" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" Detail="{Binding CurrentBalance}"></TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</BasePage.Content>
</BasePage>
