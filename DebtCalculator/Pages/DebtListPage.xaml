<?xml version="1.0" encoding="UTF-8"?>
<d:MyBasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DebtCalculator.Pages.DebtListPage"
xmlns:d="clr-namespace:DebtCalculator.Pages">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add" Command="{Binding AddDebt}" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
	<d:MyBasePage.Content>
		<ListView ItemsSource="{Binding Debts}" SelectedItem="{Binding SelectedDebt, Mode=TwoWay}" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name, Mode=OneWay}" Detail="{Binding CurrentBalance, Mode=OneWay}"></TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</d:MyBasePage.Content>
</d:MyBasePage>
