<?xml version="1.0" encoding="UTF-8"?>
<d:MyBasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DebtCalculator.Shared.SummaryPage"
xmlns:d="clr-namespace:DebtCalculator.Shared">
  <d:MyBasePage.Content>
    <StackLayout Orientation="Vertical" Padding="15">
      <Label Text="Original Interest" ></Label>
      <Label Text="{Binding OriginalInterest, StringFormat='{0:C}'}"> </Label>
      <Label Text="Snowball Interest" ></Label>
      <Label Text="{Binding SnowballInterest, StringFormat='{0:C}'}"> </Label>
      <Label Text="Saved Interest" ></Label>
      <Label Text="{Binding SavedInterest, StringFormat='{0:C}'}"> </Label>
      <Label Text="Original Payoff Date" ></Label>
      <Label Text="{Binding OriginalPayoffDate, StringFormat='{0:MMMM yyyy}'}"> </Label>
      <Label Text="Snowball Payoff Date" ></Label>
      <Label Text="{Binding SnowballPayoffDate, StringFormat='{0:MMMM yyyy}'}"> </Label>
    </StackLayout>
  </d:MyBasePage.Content>
</d:MyBasePage> 
