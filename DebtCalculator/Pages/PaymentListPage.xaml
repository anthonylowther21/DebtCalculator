<?xml version="1.0" encoding="UTF-8"?>
<d:MyBasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DebtCalculator.Shared.PaymentListPage"
xmlns:d="clr-namespace:DebtCalculator.Shared">
  <d:MyBasePage.Content>
    <StackLayout Orientation="Vertical" Padding="15">
      <Button BorderWidth="1" Text="Snowball" Command="{Binding ShowSnowball}"></Button>
      <Button BorderWidth="1" Text="Salaries" Command="{Binding ShowSalary}"></Button>
      <Button BorderWidth="1" Text="Windfalls" Command="{Binding ShowWindfall}"></Button>
    </StackLayout>
  </d:MyBasePage.Content>
</d:MyBasePage> 
